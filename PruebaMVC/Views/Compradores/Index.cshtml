@model PruebaMVC.Dominio.Modelos.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Anadir">Añadir comprador</a>
    <a asp-action="ExportarExcel">Exportar excel</a>
</p>
<form asp-action="Index">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Buscador.TextoABuscar" class="control-label"></label>
        <input asp-for="Buscador.TextoABuscar" class="form-control" />
        <span asp-validation-for="Buscador.TextoABuscar" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Buscador.NumPagina" class="control-label"></label>
        <input asp-for="Buscador.NumPagina" class="form-control" />
        <span asp-validation-for="Buscador.NumPagina" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Buscador.TamanoPagina" class="control-label"></label>
        <input asp-for="Buscador.TamanoPagina" class="form-control" />
        <span asp-validation-for="Buscador.TamanoPagina" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Buscar" class="btn btn-default" />
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Primer apellido
            </th>
            <th>
                Segundo apellido
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Compradores)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrimerApellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SegundoApellido)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Editar", new { idComprador = item.Id }) |
                    @Html.ActionLink("Borrar", "Eliminar", new { idComprador = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
